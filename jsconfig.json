{
  "compilerOptions": {
    "target": "ES6",           // Or your desired ECMAScript target
    "module": "NodeNext",   
    "moduleResolution": "NodeNext",
    "checkJs": true,           // Enable type checking for JavaScript files
    "allowJs": true,           // Allow JavaScript files to be compiled
    "baseUrl": ".",            // Base directory for resolving non-absolute module names
    "paths": {
      "*": ["types/*"],         
      "@cloudflare/workers-types/*": ["node_modules/@cloudflare/workers-types/*"]
    }
  },
  "include": [
    "./**/*.js",               // Include all JavaScript files in your project
    "./src/types.d.ts"        // Include your type definition files
  ],
  "exclude": [
    "node_modules",            // Exclude node_modules directory
    "dist"                     // Exclude distribution/build directory
  ]
}